import java.util.*

fun main(args:Array<String>){
    println("Hi, How are you today?")
    println("You bought something, eh?")
    println("Don't worry, I'll help you calculate them!")

    //user input
    print("Name of item: ")
    var name:String? = readLine() //can be null
    print("\n")

    print("Category: ")
    var ctgr = readLine()
    print("\n")

    var verCtgr:Boolean = false
    print("Sub-ctgr: ")
    var subctgr = readLine()
    when (ctgr){
        "housing" -> if (subctgr == "rent" || subctgr =="mobile") {
            verCtgr = true
        }
        "daily" -> if (subctgr == "weekly food" || subctgr == "salon" || subctgr =="medication" || subctgr == "drink" || subctgr == "clothing" || subctgr == "cosmetics" || subctgr == "movie" || subctgr == "kpop" || subctgr == "dine out") {
            verCtgr = true
        }
        "transport" -> if (subctgr =="bus" || subctgr == "bike" || subctgr == "other") {
            verCtgr = true
        }
        "academic" -> if (subctgr == "tuition" || subctgr == "book" || subctgr == "extra class") {
            verCtgr = true
        }
        "work" -> if (subctgr == "part-time" || subctgr == "volunteer" || subctgr == "full-time") {
            verCtgr = true
        }
    }
    print("\n")

    print("Spent: $")
    var spent = readLine()!!.toDouble()
    print("\n")

    var date = Calendar.getInstance(Locale.CANADA).get(Calendar.YEAR).toString() + Calendar.getInstance(Locale.CANADA).get(Calendar.MONTH).toString() + Calendar.getInstance(Locale.CANADA).get(Calendar.DATE).toString()


    //app generate auto
    var count:Int = 0 //will increment automatically
    var itemID:String = ctgr + subctgr + date + count.toString() //auto generate and convert "count"

    //app display
    if (verCtgr == true ) {
        println("ID: " + itemID)
        println("In the day: " + date)
        println("Name: " + name)
        println("In ctgr: $ctgr - sub: $subctgr")
        println("Amount expense: " + spent)

        ++count //count = count + 1 similar to count++
    } else {
        println("Please check your input in Subcategory field again!")
    }
}
